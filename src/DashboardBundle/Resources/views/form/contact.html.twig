{% extends 'DashboardBundle::layout.html.twig' %}

{% block stylesheet %}
  {{ parent() }}
{% endblock %}

{% block body %}
<div class="">
  <div class="page-title">
    <div class="title_left">
    </div>

    <div class="title_right">
    </div>
  </div>
  <div class="clearfix"></div>

  <div class="row">
    <div class="col-md-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Contact</h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <br />


        <form id="myform" name="dashboardbundle_contact" class="form-horizontal form-label-left input_mask" method="post">
          <div id="dashboardbundle_contact">
            <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
              <input type="text" class="form-control has-feedback-left" id="dashboardbundle_contact_firstname" name="dashboardbundle_contact[firstname]" maxlength="255" value="{{form.firstname.vars.value}}" placeholder="First Name">
              <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
              <input type="text" class="form-control" id="dashboardbundle_contact_name" name="dashboardbundle_contact[name]" maxlength="255" value="{{form.name.vars.value}}" placeholder="Name">
              <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
              <input type="text" class="form-control has-feedback-left" id="dashboardbundle_contact_email" name="dashboardbundle_contact[email]" maxlength="255" value="{{form.email.vars.value}}" placeholder="Email">
              <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
              <input type="text" class="form-control" id="dashboardbundle_contact_phoneNumber" name="dashboardbundle_contact[phoneNumber]" maxlength="255" value="{{form.phoneNumber.vars.value}}"  placeholder="Phone">
              <span class="fa fa-phone form-control-feedback right" aria-hidden="true"></span>
            </div>


            <div class="control-group">
              <label class="control-label col-md-1 col-sm-3 col-xs-12">Tags</label>
              <div class="col-md-11 col-sm-1 col-xs-12">
                <input id="dashboardbundle_contact_tags" name="dashboardbundle_contact[tags]" type="text" class="tags form-control" value="{{form.tags.vars.value}}"/>
                <div id="suggestions-container" style="position: relative; float: left; width: 250px; margin: 10px;"></div>
              </div>
            </div>

            {{ form_row(form.description) }}

            <div class="ln_solid"></div>
            <div class="form-group">
              <div class="col-md-6 col-sm-6 col-xs-12">
                <a href="{{path('contact')}}"><button type="button" class="btn btn-primary">Cancel</button></a>
                <button class="btn btn-primary" type="reset">Reset</button>

                <button id="dashboardbundle_contact_save" name="dashboardbundle_contact[save]" type="submit" class="btn btn-success">Submit</button>
{{ form_widget(form._token) }}
                </div>
            </div>
            </div>
        </form>
        </div>
      </div>
{% endblock %}

{% block javascript %}
{{ parent() }}
{% javascripts  '@DashboardBundle/Resources/public/js/form/jquery.tagsinput.js'
                '@DashboardBundle/Resources/public/js/form/parsley.min.js'
                '@DashboardBundle/Resources/public/js/form/autosize.min.js'
                '@DashboardBundle/Resources/public/js/form/jquery.autocomplete.min.js'
                '@DashboardBundle/Resources/public/js/custom.min.js'
%}
    <script src="{{ asset_url }}"></script>
<script>
$('#dashboardbundle_contact_tags').tagsInput({
'width':'auto',
});

$('#myform').submit(function() {
    $('#dashboardbundle_contact_tags').split(',');
    return true;
});
</script>

{% endjavascripts %}
{% endblock %}
